boxplot_inflam <- function(physeq, measure) {
  paletteIF <- c("High"="red", "Low"="blue")
  rich_S <-plot_richness(physeq, x ="VISIT", measures=c(measure))$data 
  pplot <- ggplot(data=rich_S, aes(factor(Cyt_cluster), y = value, fill=Cyt_cluster)) + geom_boxplot() + geom_point(aes(color=Cyt_cluster))+ stat_smooth(method="loess")+ theme_bw() + scale_fill_manual(values=c(paletteIF)) + scale_color_manual(values=c(paletteIF))  +theme(panel.grid.major = element_blank(), panel.grid.minor = element_blank())+theme(axis.text.x=element_text(angle = 45, hjust = 1,size=10,face="bold")) + theme(text=element_text(size=10)) +ylab("Shannon Index (log)") + ggtitle("Alpha diversity by inflammation") +scale_y_log10()
  pplot <- pplot + geom_signif(comparisons = list(c("Low", "High")), map_signif_level=TRUE, annotations="***",y_position = c(1.7),tip_length = 0.02, textsize = 4,vjust=0.1)
  fun_length <- function(x){
    return(data.frame(y=median(x),label= paste0("n=", length(x))))
  }
  pplot2 <- pplot + stat_summary(aes(x = factor(Cyt_cluster)), fun.data = fun_length, geom = "text",vjust = 1.5, size = 3)
  #create figure 
  return(pplot2)
}
